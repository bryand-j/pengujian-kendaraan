<div class="row">
  <div class="col-md-12 col-xl-10 mx-auto animated fadeIn delay-2s">
    <div class="card">
      <div class="card-header bg-primary text-white">
        <i class="ti-pencil-alt"></i> {open}ucwords($title_module){close}
      </div>
      <div class="card-body">
        <form id="form" action="{open}$action{close}" autocomplete="off">{content_form}

          <input type="hidden" name="params" value="{open}strtolower($params){close}">

        <div class="mt-4">
          <a href="{open}site_url("backend/".$this->uri->segment(2)){close}" class="btn btn-sm btn-danger">{open}cclang("cancel"){close}</a>
          <button type="submit" id="submit" name="submit" class="btn btn-sm btn-primary">{open}cclang("save"){close}</button>
        </div>

        </form>
      </div>
    </div>
  </div>
</div>


<script type="text/javascript">
$("#form").submit(function(e){
e.preventDefault();
var me = $(this);
$("#submit").prop('disabled',true).html('Loading...');
$(".form-group").find('.text-danger').remove();
$.ajax({
      url             : me.attr('action'),
      type            : 'post',
      data            :  new FormData(this),
      contentType     : false,
      cache           : false,
      dataType        : 'JSON',
      processData     :false,
      success:function(json){
        if (json.success==true) {
          location.href = json.redirect;
          return;
        }else {
          $("#submit").prop('disabled',false)
                      .html('{open}cclang("save"){close}');
          $.each(json.alert, function(key, value) {
            var element = $('#' + key);
            $(element)
            .closest('.form-group')
            .find('.text-danger').remove();
            $(element).after(value);
          });
        }
      }
    });
});
</script>
